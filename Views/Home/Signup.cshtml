
@{
    ViewData["Title"] = "Kayıt Sayfası";
}

@model User
<form asp-controller="Home" asp-action="Signup" method="post" class="flex " style="display: flex; flex-direction: column; ">
        <div class="m-4">
            <label asp-for="@Model.Name">Kullanıcı Adı : </label>
            <input type="text" asp-for="@Model.Name" class="form-control" required>
        </div>
        
        <div class="m-4">
            <label asp-for="@Model.UserEmail">Email : </label>
            <input type="email" asp-for="@Model.UserEmail" class="form-control" required>
        </div>

        <div class="m-4">
            <label asp-for=@Model.Password>Parola : </label>
            <input type="password" asp-for="@Model.Password" class="form-control" required>
        </div>

    <button type="submit" class="btn btn-primary" style="margin: 0 auto;padding: 1rem;">Giriş Yap</button>
</form>